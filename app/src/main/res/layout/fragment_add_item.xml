<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|start"
    android:padding="20dp"
    android:background="@color/white_smoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_cancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:backgroundTint="@color/rich_mahogany"
                android:src="@drawable/ic_cancel" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            style="?android:attr/progressBarStyleLarge"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:elevation="6dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/white_smoke">

            <AutoCompleteTextView
                android:imeOptions="actionDone"
                android:id="@+id/searchItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="חפש פריט"
                android:textColorHint="@color/dark_teal_transparent"
                android:textColor="@color/dark_teal"
                android:textSize="28sp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:dropDownHeight="200dp"
                android:dropDownVerticalOffset="5dp"
                android:textColorHighlight="@color/tan_transparent"
                android:completionThreshold="1"
                android:inputType="text"
                android:focusable="true"
                android:clickable="true"
                android:ellipsize="none"
                android:background="@null"
                android:textDirection="rtl"
                android:singleLine="true"
                android:gravity="start"
                android:scrollHorizontally="false" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:id="@+id/lout_info"
            android:orientation="vertical"
            android:gravity="center_horizontal|top">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:elevation="6dp"
                app:cardCornerRadius="16dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|end">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_down"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:tint="@color/rich_mahogany"
                            android:src="@drawable/ic_arrow_down"/>

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="_"
                            android:textColor="@color/rich_mahogany"
                            android:textSize="32sp"/>

                        <ImageButton
                            android:id="@+id/btn_up"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:tint="@color/rich_mahogany"
                            android:src="@drawable/ic_arrow_up"/>

                    </LinearLayout>

                    <TextView
                        android:textColor="@color/rich_mahogany"
                        android:textSize="36sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="כמות"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="10dp">

                <TextView
                    android:textColor="@color/dark_teal"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="סופרים זמינים"
                    />

                <include
                    android:id="@+id/supermarkets_list"
                    layout="@layout/supermarkets_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:padding="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white_smoke"
            android:textSize="40sp"
            android:backgroundTint="@color/dark_teal"
            android:textStyle="bold"
            android:text="הוסף"
            app:cornerRadius="16dp"
            android:elevation="8dp"
            app:iconPadding="8dp"
            app:rippleColor="@color/tan"/>

    </LinearLayout>

</LinearLayout>