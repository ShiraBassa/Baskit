<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.CategoryActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="10dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:id="@+id/layout_screen_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer">

            <LinearLayout
                android:id="@+id/layout_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:gravity="center_horizontal|top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="10dp"
                        android:scaleType="fitCenter"
                        android:background="@null"
                        android:src="@drawable/ic_back"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_list_name"
                        android:textColor="?attr/colorSecondary"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:visibility="invisible"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="רשימה"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_category_name"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="קטגוריה"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layout_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Unchecked RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_unchecked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorPrimaryVariant"
                android:layout_marginBottom="15dp"/>

            <!-- Checked RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_checked"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/tv_total"
                android:textColor="?attr/colorSecondary"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:text="סך הכל: _ ש״ח" />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>