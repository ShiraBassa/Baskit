<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.CategoryActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="10dp"
    android:background="?attr/colorSurface">

    <!-- Top Floating Header -->
    <LinearLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:paddingVertical="16dp"
        android:paddingHorizontal="10dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:src="@drawable/ic_back"
                app:tint="?attr/colorSecondary" />

            <TextView
                android:id="@+id/tv_list_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="רשימה"
                android:textSize="28sp"
                android:textColor="?attr/colorSecondary"
                android:visibility="invisible"
                android:gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="קטגוריה"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSecondary"
            android:visibility="invisible"
            android:gravity="center"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_arrange_cheapest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="סדר לפי הזול ביותר"
        android:textColor="?attr/colorTertiary"
        app:strokeColor="?attr/colorTertiary"
        android:backgroundTint="?attr/colorSurface"
        app:rippleColor="?attr/colorSecondaryContainer"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:strokeWidth="2dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>


    <!-- Items List -->
    <LinearLayout
        android:id="@+id/layout_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Category RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_category_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/tv_total"
            android:textColor="@color/price"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:text="סך הכל: _ ש״ח" />

    </LinearLayout>

    <!-- Bottom Bar -->
    <include
        android:id="@+id/bottom_bar"
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>