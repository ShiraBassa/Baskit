<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:gravity="center"
    android:background="?attr/colorSurface"
    tools:context=".List.ListActivity">

    <!-- Top Floating Header -->
    <LinearLayout
        android:id="@+id/layout_top_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp"
        android:paddingHorizontal="10dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_back"
            app:tint="?attr/colorSecondary" />

        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="רשימה"
            android:visibility="invisible"
            android:textColor="?attr/colorSecondary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:tint="?attr/colorPrimaryVariant"
            android:src="@drawable/ic_share" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_arrange_cheapest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="סדר לפי הזול ביותר"
        android:textColor="?attr/colorTertiary"
        app:strokeColor="?attr/colorTertiary"
        android:backgroundTint="?attr/colorSurface"
        app:rippleColor="?attr/colorSecondaryContainer"
        android:layout_margin="10dp"
        android:elevation="3dp"
        app:strokeWidth="2dp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>


    <!-- Scrollable Categories List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/categories_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|top"
            android:paddingHorizontal="5dp" />
    </ScrollView>

    <!-- Total Text -->
    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:text="סך הכל: _ ש״ח"
        android:textColor="@color/price"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Bottom Bar -->
    <include
        layout="@layout/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>