<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical|start"
    android:padding="20dp"
    android:background="@color/white_smoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_cancel"
            android:tint="@color/dark_teal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/tv_item_name"
                android:textColor="@color/dark_teal"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="פריט" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lout_quantity_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical|end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/lout_info"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_down"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/quantity" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="כמות"
                    android:textColor="@color/quantity"
                    android:textSize="32sp" />

                <ImageButton
                    android:id="@+id/btn_up"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_up"
                    android:tint="@color/quantity" />

            </LinearLayout>

            <TextView
                android:textColor="@color/quantity"
                android:textSize="36sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="כמות" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:textColor="#000000"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="סופרים זמינים" />

            <include
                android:id="@+id/supermarkets_list"
                layout="@layout/supermarkets_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white_smoke"
            android:textSize="40sp"
            android:textStyle="bold"
            android:backgroundTint="@color/dark_teal"
            android:text="שמור" />

    </LinearLayout>
</LinearLayout>